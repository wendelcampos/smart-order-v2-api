generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(user)
  createDat DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Order {
  id                 String              @id @default(uuid())
  customerId         String              @map("customer_id")
  waiterId           String              @map("waiter_id")
  tableId            String              @map("table_id")
  status             StatusOrder         @default(open)
  createdAt          DateTime            @default(now()) @map("created_at")
  updatedAt          DateTime            @updatedAt @map("updated_at")
  orderItems         OrderItems[]
  customer           Customer            @relation(fields: [customerId], references: [id])
  table              Table               @relation(fields: [tableId], references: [id])
  waiter             Waiter              @relation(fields: [waiterId], references: [id])
  Payment            Payment?
  SatisfactionSurvey SatisfactionSurvey?

  @@map("orders")
}

model OrderItems {
  id        String   @id @default(uuid())
  quantity  Int
  orderId   String   @map("order_id")
  productId String   @map("product_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  order     Order    @relation(fields: [orderId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])

  @@map("order_itens")
}

model Product {
  id          String       @id @default(uuid())
  name        String
  description String
  price       Decimal
  category    Category
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")
  orderItens  OrderItems[]

  @@map("products")
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  cpf       String
  telephone String
  email     String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  orders    Order[]

  @@map("customers")
}

model Waiter {
  id         String   @id @default(uuid())
  name       String
  telephone  String
  hiringDate DateTime @default(now()) @map("hiring_date")
  orders     Order[]

  @@map("waiters")
}

model Table {
  id          String      @id @default(uuid())
  tableNumber String      @map("table_number")
  status      StatusTable @default(open)
  orders      Order[]

  @@map("tables")
}

model Payment {
  id          String          @id @default(uuid())
  total       Decimal?
  orderId     String          @unique @map("order_id")
  paymentType MethodsPayments? @map("payment_type")
  paymentDate DateTime?
  status      StatusPayment   @default(open)
  createdAt   DateTime @default(now()) @map("created_at")

  order       Order           @relation(fields: [orderId], references: [id])

  @@map("payments")
}

model SatisfactionSurvey {
  id        String                   @id @default(uuid())
  note      Int
  status    StatusSatisfactionSurvey
  orderId   String                   @unique @map("order_id")
  createdAt DateTime                 @default(now()) @map("created_at")
  order     Order                    @relation(fields: [orderId], references: [id])

  @@map("satisfactions_survey")
}

enum StatusPayment {
  open
  paid
}

enum UserRole {
  admin
  user
}

enum StatusOrder {
  open
  closed
}

enum StatusTable {
  open
  closed
}

enum Category {
  bebidas
  pratos
  pratos_do_dia
  lanches
}

enum StatusSatisfactionSurvey {
  pessimo
  ruim
  regular
  bom
  otimo
}

enum MethodsPayments {
  cash
  credit_card
  debit_card
  pix
}
